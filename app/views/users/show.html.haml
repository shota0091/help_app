.UserPage
  .UserPage__ProfileBox
    .IntroductionSide
      .UserImage
        = image_tag @user.image.url
      .UserName
        = "名前：#{@user.name}"
      .UserAge
        = "年齢：#{@user.age}"
      .UserIntroduction
        = "紹介文:#{@user.explanation}"
      .userAddress
      .UserFollow
        = icon("fa","heart")
      .UserEvaluate
      .UserEdit
        - if @user.id == current_user.id
          = link_to icon('fas','edit')+"ユーザー情報を編集する", edit_user_path,method: :get,class:"EditBtn"
    .PostSide
      .PostImage
      .PostDay
      .postIntroduction

