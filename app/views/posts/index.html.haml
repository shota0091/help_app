= render "homes/header"
.wrapper
  .wrapper__index
    - @posts.each do |i|
      .contents
        .contents__image
          = image_tag i.image.url, class:"Image"
        .contents__title
          = i.title
        .contents__tags
          - @tag_list.each do |tag|
            .tag
              = tag.tag_name
        .contents__matter
          .contents__matter__recruitment
            = i.explanation
          .contents__matter__user
            .UserImage
              aaaa
            .UserName
              = i.user.name