.wrapper
  .SearchForm
    = search_form_for @serach do |f|
      = f.text_field  :title_or_explanation_or_tags_tag_name_cont, placeholder: "検索内容を入力"
      = f.select :address_id,options_from_collection_for_select(Address.all, :id, :name),{prompt:"登録地を選択"}
      = f.submit '検索'
      並び替え
      = sort_link(@serach, :created_at, "投稿日時")
      = sort_link(@serach, :solution, "受付中")
      .wrapper__index
        - @posts.each do |i|
          .contents
            .contents__image
              = link_to post_path(i) do
                = image_tag i.image.url, class:"Image"
            .contents__title
              = link_to i.title,post_path(i),class:"text"
            .contents__tags
              - i.tags.each do |tag|
                .tag
                  = tag.tag_name
              .Address-icon
                = icon("fa","map-marker-alt")
              .Address
                = i.address.name
            .contents__matter
              .contents__matter__recruitment
                = link_to i.explanation,post_path(i),class:"explanation"
              .contents__matter__user
                .UserImage
                  = image_tag i.user.image.url,class:"image"
                .UserName
                  = link_to i.user.name,user_path(i.user.id),class:"name"
                - if i.solution == "true"
                  .solution
                    解決済み
                .TimeStamp
                  = "投稿日:#{i.created_at.strftime('%Y/%m/%d')}"
        .pages
          .pages__box
            = paginate @posts